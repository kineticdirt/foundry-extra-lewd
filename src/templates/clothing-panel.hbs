<div class="clothing-panel">
	<div class="panel-header">
		<div class="panel-title">Clothing</div>
	</div>
	<div class="panel-content">
		<div class="silhouette-icon">
			<img src="modules/foundry-extras/icons/womans-sillhouette.png" alt="Woman Silhouette">
		</div>
		<div class="slots-container">
			{{#each bodyPartGroups as |group|}}
			<div class="body-part-row" data-body-part="{{group.label}}">
				<div class="body-part-label">{{group.label}}</div>
				<div class="body-part-slots">
					{{#each group.slots as |slot|}}
					<div class="clothing-slot {{#if slot.item}}filled{{else}}empty{{/if}} slot-{{slot.key}}" 
						 data-slot="{{slot.key}}"
						 data-body-part="{{slot.bodyPart}}"
						 data-layer="{{slot.layer}}"
						 title="{{slot.label}}{{#if slot.item}}: {{slot.item.name}}{{/if}}">
						
						{{#if slot.item.img}}
						<img src="{{slot.item.img}}" alt="{{slot.item.name}}">
						{{else}}
						<div class="slot-placeholder">
							<i class="{{slot.icon}}"></i>
						</div>
						{{/if}}

						{{#if slot.item}}
						<div class="remove-item">
							<i class="fas fa-times"></i>
						</div>
						{{/if}}
					</div>
					{{/each}}
				</div>
			</div>
			{{/each}}
		</div>
	</div>
	<button class="panel-minimize-btn" title="Minimize/Maximize">
		<i class="fas fa-chevron-up"></i>
	</button>
</div>

